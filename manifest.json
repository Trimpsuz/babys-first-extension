{
  "manifest_version": 2,
  "name": "Testaustime",
  "version": "0.1",
  "description": "__MSG_appDesc__",
  "default_locale": "en",
  "homepage_url": "https://testaustime.fi/",
  "icons": {
    "48": "assets/toolbar-on.png"
  },
  "permissions": ["storage"],
  "browser_action": {
    "default_icon": {
      "48": "assets/toolbar-on.png"
    },
    "default_title": "Testaustime",
    "default_popup": "time.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "testaaja@testaustime.fi"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://docs.google.com/spreadsheets/*"],
      "js": ["sheets.js"]
    },
    {
      "matches": ["*://scratch.mit.edu/projects/*/editor/*"],
      "js": ["scratch.js"]
    }
  ]
}
